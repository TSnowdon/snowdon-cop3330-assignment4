<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<GridPane id="MainPage" prefHeight="800.0" prefWidth="600.0"
          xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
          alignment="TOP_CENTER" hgap="10" vgap="20"
          fx:controller="ucf.assignments.FXMLController">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
        <ComboBox promptText="Select List" onAction="#selectList" fx:id="selectListComboBox" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button text="Import List" onAction="#importList" fx:id="importListButton" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button text="Export List" onAction="#exportList" fx:id="exportListButton" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField promptText="New List Name" fx:id="newListTextField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
        <Button text="New List" onAction="#newList" fx:id="newListButton" GridPane.columnIndex="4" GridPane.rowIndex="0"/>

        <ComboBox promptText="Select View" onAction="#selectView" fx:id="selectViewComboBox" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

        <TextField text="Task Description..." fx:id="newTaskDescriptionTextField" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField text="Due Date YYYY-MM-DD" fx:id="newTaskDateField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button text="Add Task" onAction="#newTask" fx:id="newTaskButton" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

        <ListView prefWidth="200" prefHeight="100" fx:id="taskListView" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
</GridPane>